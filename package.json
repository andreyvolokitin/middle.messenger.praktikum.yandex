{
  "name": "middle.messenger.praktikum.yandex",
  "version": "0.0.3",
  "description": "Learning project at Yandex Praktikum",
  "scripts": {
    "start": "concurrently \"npm run express\" \"npm run handle-static && parcel watch './static/**/*.html' --no-cache\"",
    "watch": "parcel watch './static/**/*.html' --no-cache",
    "express": "node ./server.js",
    "build": "npm test && npm run handle-static && npm run lint && parcel build './static/**/*.html' --no-cache",
    "lint:css": "stylelint \"**/*.scss\" --fix",
    "lint:js": "eslint . --fix --ext .js,.ts",
    "lint": "concurrently \"npm run lint:css\" \"npm run lint:js\"",
    "handle-static": "npm run sprite:svg && npm run copy:assets",
    "sprite:svg": "node ./utils/generateSprites.mjs",
    "copy:assets": "copyfiles -u 1 \"static/assets/**/*\" \"static/favicon.ico\" dist",
    "test": "cross-env TS_NODE_PROJECT='./tsconfig.commonjs.json' TS_NODE_FILES=true mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreyvolokitin/middle.messenger.praktikum.yandex.git"
  },
  "author": "Andrey Volokitin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andreyvolokitin/middle.messenger.praktikum.yandex/issues"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "homepage": "https://github.com/andreyvolokitin/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@andreyvolokitin/parcel-transformer-handlebars": "^0.0.2",
    "@parcel/transformer-sass": "^2.0.0-beta.3.1",
    "@parcel/transformer-typescript-tsc": "^2.0.0-beta.3.1",
    "@parcel/validator-typescript": "^2.0.0-beta.3.1",
    "@types/chai": "^4.2.21",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.2.6",
    "chai": "^4.3.4",
    "concurrently": "^6.1.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "jsdom": "^14.1.0",
    "mocha": "^9.0.2",
    "parcel": "^2.0.0-beta.3.1",
    "postcss": "^8.3.0",
    "postcss-em-media-query": "^4.1.0",
    "postcss-inline-svg": "^5.0.0",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "svg-sprite": "^1.5.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@andreyvolokitin/handlebars.js": "^4.7.9",
    "html5-boilerplate": "^8.0.0",
    "nanoid": "^3.1.23"
  }
}
