{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots" : ["node_modules/@types"],
    "types": ["@types/mocha", "@types/chai", "@types/jsdom"]
  },
  "include": ["src/**/*", "static/**/*"]
}
